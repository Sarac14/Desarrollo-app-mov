<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:minHeight="100dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1BBCD">


            <TextView
                android:id="@+id/tarea"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="101dp"
                android:layout_height="36dp"
                android:layout_marginStart="84dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#E91E63"
                android:text="Borrar"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tarea"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnModificar"
                android:layout_width="103dp"
                android:layout_height="38dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#E91E63"
                android:text="Editar"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/btnBorrar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.267"
                app:layout_constraintStart_toEndOf="@+id/btnBorrar" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="142dp"
                android:layout_height="69dp"
                android:layout_marginBottom="144dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/bombilla" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>